doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
    body 
        header
            include ../snapshot/navigation.pug
        main(style="display: flex")
            each product in prods
                div(style="display: inline-block; margin: 30px; display: flex; flex-direction: column; width: 150px; align-items: center")
                    h2 #{product.title}
                    p #{product.price}
                    img(src=product.imageUrl height=100)
                    p #{product.description}
                